!!! 5
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }

    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }

    %title= Settings.title? ? 'Easylot' : Settings.title

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag

  %body
    .row
      .container
        .col-md-10
          = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f|
            %h4.form-signin-heading Login using your email
            %label.sr-only{:for => "inputEmail"} Email address
            = f.email_field :email, autofocus: true, id: 'inputEmail', class: 'form-control', placeholder: 'Email Address', require: "", type: 'email'
            %label.sr-only{:for => "inputPassword"} Password
            = f.password_field :password, id: 'inputPassword', class: 'form-control', autocomplte: 'off', required: '', type: 'password'
            - if devise_mapping.rememberable?
              = f.check_box :remember_me
              = f.label :remember_me
            %p
              = f.submit "Log in", class: "btn btn-lg btn-primary btn-block"
            = render "devise/shared/links"
