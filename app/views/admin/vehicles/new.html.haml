.row
  = form_for [:admin, vehicle] do |form|
    .col-md-8
      .card
        .header
          %h4.title Vehicle Photos
        .content
          .row.vdp
            .col-md-4
              %label 'Upload Photos'
              = form.file_field :photos, multiple: true
    .col-md-8
      .card
        .header
          %h4.title Add a Vehicle
        .content
          %form
            = render 'form', form: form
          .clearfix
            = form.submit 'Save Vehicle', class: 'btn btn-info btn-fill pull-right'
