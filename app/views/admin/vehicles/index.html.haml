- if user_signed_in?
  .row.vdp
    .col-md-6
      %h3
        = link_to "Add Vehicle", new_admin_vehicle_path, class: 'btn btn-success btn-fill'
.flex-box.row.vdp
  - admin_vehicles.each do |vehicle|
    .col-md-4.vdp
      - if vehicle.photos?
        = link_to image_tag(vehicle.photos.first.thumb.url, class: 'thumbnail'), admin_vehicle_path(vehicle)
      - else
        = link_to image_tag('no_image_available-thumb', class: 'thumbnail'), admin_vehicle_path(vehicle)
      %h5
        = "#{vehicle.year} #{vehicle.make} #{vehicle.model} #{vehicle.trim}"
      %p
        = "#{number_to_currency(vehicle.price)}"
      = link_to 'View Details', admin_vehicle_path(vehicle), class: 'btn btn-info btn-fill expaneded'
