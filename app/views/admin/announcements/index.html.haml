.col-md-12
  .card
    .header
      %h4.title Announcements
      = link_to 'Add Announcement', new_admin_announcement_path, class: 'btn btn-success btn-fill'

    .content
      .table-full-width
        %table.table
          %tbody
            - announcements.each do |announcement|
              %tr
                %td
                %td= announcement.title
                %td.td-actions.text-right
                  = link_to 'Edit Announcement', edit_admin_announcement_path(announcement), class: 'btn btn-primary btn-simple', title: 'Edit Announcement'
                  = link_to 'Destroy', admin_announcement_path(announcement), class: 'btn btn-danger btn-simple', title: 'Remove', method: :delete, data:{confirm:'Are you sure you want to delete this Announcement'}
